{
    "extends": "astro/tsconfigs/strict",
    "compilerOptions": {
        "moduleResolution": "node",
        "plugins": [
            {
                "name": "@astrojs/ts-plugin"
            },
        ],
        "baseUrl": ".",
        "paths": {
            "@components/*": [
                "src/components/*"
            ],
            "@layouts/*": [
                "src/layouts/*"
            ],
            "@pages/*": [
                "src/pages/*"
            ],
            "@styles/*": [
                "src/styles/*"
            ],
            "@scripts/*": [
                "src/scripts/*"
            ],
        }
    },
}