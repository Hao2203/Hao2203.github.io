---
import Navigation from "@components/Navigation.astro";
import "../styles/global.css";
import BaseLayout from "@layouts/BaseLayout.astro";
import Greeting from "@components/Greeting";
---

<BaseLayout pageTitle="首页">
    <Navigation href="/" />
    <div
        class="bg-cover bg-center min-h-[95vh] flex justify-center items-center"
        style="background-image: url('/sun.jpg');"
    >
        <div class="flex flex-col">
            <h1 class="text-3xl font-bold">This is Home</h1>
            <Greeting
                client:load
                messages={["Hi", "Hello", "Howdy", "Hey there"]}
            />
        </div>
    </div>
</BaseLayout>
